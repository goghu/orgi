<p id="notice"><%= notice %></p>

<h1>Proyectos</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Cliente</th>
      <th>Nombre</th>
      <th>Monto</th>
      <th>Estado</th>
      <th>Fecha inicio</th>
      <th>Fecha fin</th>
      <th>Borrado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proyectos.each do |proyecto| %>
      <tr>
        <td><%= proyecto.user_id %></td>
        <td><%= proyecto.cliente_id %></td>
        <td><%= proyecto.nombre %></td>
        <td><%= proyecto.monto %></td>
        <td><%= proyecto.estado %></td>
        <td><%= proyecto.fecha_inicio %></td>
        <td><%= proyecto.fecha_fin %></td>
        <td><%= proyecto.borrado %></td>
        <td><%= link_to 'Show', proyecto %></td>
        <td><%= link_to 'Edit', edit_proyecto_path(proyecto) %></td>
        <td><%= link_to 'Destroy', proyecto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

